
<div class="row">
    <div class=" bg-danger"><h3 style="padding-left:20px"> Sản phẩm mới </h3></div>
    <div>

        @foreach (var item in Model)
        {
            <div class="col-md-3 col-sm-6">
                <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">
                    <img src=@Url.Content("~" +item.Anhbia.ToString()) class="img-responsive" alt="" width="400" height="400" />
                </a>
                @{
                    if (@item.Sanphammoi == true)
                    {
                        <span class="sticker">New</span>
                    }

                }
                <center>
                    <h3> @item.Tensp</h3>
                    @{
                        if (@item.Giamoi == @item.Giatien)
                        {
                            <h3 style="color:red">Giá: @String.Format("{0:0,0}", @item.Giamoi) VND</h3>
                        }
                        else
                        {
                            <h3 style="color:red">Giá ưu đãi: @String.Format("{0:0,0}", @item.Giamoi) VND</h3>
                            <strike><h5 style="color:darkgray">Giá gốc: @String.Format("{0:0,0}", @item.Giatien) VND</h5></strike>
                        }
                    }
                    <br />
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMasp = item.Masp, @strURL = Request.Url.ToString() }))
                    {
                        <input type="submit" value="Mua hàng" id="bgnGioHang" class="btn btn-success"/>}

                    @*<h4> <a href="@Url.Action("xemchitiet", new {@Masp=item.Masp })">Xem chi tiết</a></h4>*@


                </center>

            </div>
        }
    </div>
