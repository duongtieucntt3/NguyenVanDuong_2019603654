@model IEnumerable<Ictshop.Models.TinTuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Quản lý tin tức</h2>

<p>
    @Html.ActionLink("Thêm mới", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Mã tin tức
        </th>
        <th>
            @Html.DisplayNameFor(model => model.anh)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.tieuDe)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ngayphatHanh)
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.maTinTuc)
        </td>
        <td>
            <img src="@Url.Content("~" +item.anh)" width="50" height="50" />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tieuDe)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ngayphatHanh)
        </td>

        <td>
            <button class="btn btn-success">
                @Html.ActionLink("Sửa", "Edit", new { id = item.maTinTuc }, new { @style = "color:white;" })
            </button>
            <button class="btn btn-primary">
                @Html.ActionLink("Chi tiết", "Details", new { id = item.maTinTuc }, new { @style = "color:white;" })
            </button>
            <button class="btn btn-danger">
                @Html.ActionLink("Xóa", "Delete", new { id = item.maTinTuc }, new { @style = "color:white;" })
            </button>
        </td>
    </tr>
}

</table>
